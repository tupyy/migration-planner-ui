{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Agent UI",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:3001",
      "webRoot": "${workspaceFolder}/apps/agent-ui",
      "server": {
        "cwd": "${workspaceFolder}/apps/agent-ui",
        "command": "yarn start"
      },
      "preLaunchTask": "Wait for Agent API to be ready",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Agent API",
      "request": "launch",
      "type": "node-terminal",
      "envFile": "${workspaceFolder}/../assisted-migration-agent/.envrc",
      "command": "make run",
      "cwd": "${workspaceFolder}/../assisted-migration-agent",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": [
        "Agent API",
        "Agent UI"
      ],
      "stopAll": true
    }
  ]
}