{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/.tmp/**",
      "!**/.cache/**",
      "!**/out/**",
      "!./packages/api-client/**",
      "!./packages/agent-client/**"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "javascript": {
    "globals": ["console", "process", "Buffer", "__dirname", "__filename"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["./packages/ioc/**"],
      "linter": { "domains": { "react": "recommended" } }
    }
  ]
}
