{
  "name": "migration-planner-ui",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:all": "yarn workspaces foreach -t --all run build",
    "bundle:all": "yarn workspaces foreach -t --all run bundle",
    "clean:all": "rm -rf out && yarn workspaces foreach --all -p run clean",
    "check:all": "yarn workspaces foreach --all -p run check",
    "check:fix:all": "yarn workspaces foreach --all -p run check:fix",
    "format:all": "yarn workspaces foreach --all -p run format",
    "update:api-client": "make api-client",
    "update:agent-client": "make agent-client",
    "update:image-client": "make image-client"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/lodash": "^4",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "typescript": "~5.5.0",
    "vite": "^5.4.12"
  },
  "packageManager": "yarn@4.12.0"
}
